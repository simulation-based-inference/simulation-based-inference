{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "serve",
            "type": "shell",
            "command": "bundle",
            "args": [
                "exec",
                "jekyll",
                "serve"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "statusbar": {
                    "label": "$(debug-start) serve"
                }
            },
        },
        {
            "label": "git ff",
            "type": "shell",
            "command": "git",
            "args": [
                "merge",
                "--ff-only",
                "upstream/main"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "statusbar": {
                    "label": "$(refresh) git ff"
                }
            },
        }
    ]
}